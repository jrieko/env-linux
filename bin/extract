#!/usr/bin/env bash -i

include script

error_perms=2
error_type=3
error_404=404

usage() {
  echo "usage: $(basename $0) <archive file path> [destination directory]"
}

exit.help() {
  echo "Extract an archive."
  echo ""
  usage
  exit 0
}

exit.perms() {
  echo_err "permission denied: $1"
  exit $error_perms
}

exit.type() {
  echo_err "unknown archive type: $1"
  exit $error_type
}

exit.404_file() {
  echo_err "file not found: $1"
  exit $error_404
}

exit.404_dir() {
  echo_err "directory not found: $1"
  exit $error_404
}

[ $# -lt 1 ] || [ $# -gt 2 ] && exit.usage
[ "$1" == "-h" ] || [ "$1" == "--help" ] && exit.help

if [ -n "$2" ]; then
  dest="$2"

  [ -e "$dest" ] || mkdir -p "$dest" || exit $?
  [ -d "$dest" ] || exit.404_dir "$dest"
  [ -w "$dest" ] || exit.perms "$dest"

  cd "$dest" || exit $?
fi

if [ -f "$1" ]; then
  case "$1" in
    *.tar.gz) tar xzf "$1" ;;
    *.tar.bz2) tar xjf "$1" ;;
    *.bz2) bunzip2 "$1" ;;
    *.rar) unrar e "$1" ;;
    *.gz) gunzip "$1" ;;
    *.tar) tar xf "$1" ;;
    *.tbz2) tar xjf "$1" ;;
    *.tgz) tar xzf "$1" ;;
    *.zip) unzip "$1" ;;
    *.Z) uncompress "$1" ;;
    *.7z) 7z x "$1" ;;
    *.jar) jar -xf "$1" ;;
    *) exit.type "$1"
  esac
else
  exit.404_file "$1"
fi
